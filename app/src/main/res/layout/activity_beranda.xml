                    android:textSize="17dp" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/tab_bar"
        android:layout_width="460dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="625dp"
        android:src="@drawable/tab_bar" />

</RelativeLayout>