                        android:textSize="17dp" />
                </FrameLayout>

            <FrameLayout
                android:id="@+id/beranda5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="413dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beranda5" />

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/avatar4"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="36dp"/>

                <TextView
                    android:id="@+id/txtfadly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fadly"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="82dp"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#64;jdfadly_"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="82dp"
                    android:textSize="17dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/beranda5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="413dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beranda6" />

                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/avatar5"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="36dp"/>

                <TextView
                    android:id="@+id/txtIka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ika"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="82dp"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView1"
