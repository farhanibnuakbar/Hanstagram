<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/latar">

    <ImageView
        android:id="@+id/latar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/latar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="65dp"
        android:src="@drawable/latar2" />

    <ImageView
        android:id="@+id/latar3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/latar3" />

    <ImageView
        android:id="@+id/imgleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="35dp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgleft"
        android:layout_marginTop="25dp"
        android:text="Login"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/gmbr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gmbr1"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/gmbr1"
        android:layout_marginTop="15dp"
        android:hint="username"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/purple"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/username"
        android:layout_marginTop="0dp"
        android:hint="password"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/purple"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:width="175dp"
        android:height="30dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/button_shape" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/btnlogin">

        <!-- Tambahkan TextView pertama -->
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun?"
            android:textSize="20dp"
            android:textColor="@color/purple"/>

        <!-- Tambahkan TextView kedua -->
        <TextView
            android:id="@+id/txtDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Daftar"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/purple"/>

    </LinearLayout>

</RelativeLayout>